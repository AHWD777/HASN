<%= form_for(@newPost) do |f| %>

<div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-1">
          <img src="<%= current_user.avatar_url.to_s %>" height="35px" width="35px">
        </div>
        <div class="col-sm-11">
        <center>
            <span class="field">
              <%= f.text_field :content, autofocus: true, class: "form-control" %>
            </span><br />

            <span class="actions">
              <%= f.submit "Add my post!", class: "btn btn-primary" %>
            </span><br />
          </center>
        </div>
    </div>
</div>

<% end %>